  "kibo": {
    "poweredBy": [
      { "name": "Tiptap", "url": "https://tiptap.dev/" },
      { "name": "Lucide", "url": "https://lucide.dev/" },
      { "name": "lowlight", "url": "https://github.com/wooorm/lowlight" },
